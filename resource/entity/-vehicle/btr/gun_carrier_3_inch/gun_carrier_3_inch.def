	}

	{volume "inventory"
        {thickness 2}
	}

	("armor_medium" turret(0) body(12 8 8 8))


	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_driver_car"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "commander"
			{forward	{begin	"board_tank_left"} {end "seat_passenger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "crew"
			{forward	{begin	"board_tank_right"} {end "seat_passenger"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
	}
	("crew_human_visible_anm" place(driver)		door1(emit1) door2(emit1) anm_left(driver) anm_right(driver) visor(driver))
	("crew_human_visible_anm" place(commander)	door1(emit3) door2(emit3) anm_left(commander) anm_right(commander) visor(main))
	("crew_human_visible_anm" place(charger)	door1(emit4) door2(emit4) anm_left(commander) anm_right(crew) visor(driver))
	("crew_human_visible_anm" place(gunner)	        door1(emit2) door2(emit2) anm_left(commander) anm_right(crew) visor(main))
	("gunner_visible")
	{placer 
		{place "driver" {openForCrush 0}}
	}	

	(define "crew_human"
		{placer
			{place "%place" {group "crew"} {linkbone "%place"} {turnoff {sensor} {shadow}}}
		}
		{boarder
			{door "%door1"}
			{door "%door2"}
			{link "%door1" "%place" {anm "%place"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "%place"} {forward putoff} {reverse puton}}
		}
	)

	{placer
		{place "driver" {group "crew"} {visor "driver"}}
	}

	{boarder
		{door "emit1"}
		{door "emit2"}
		{link "emit1" "driver" {anm "driver"} {forward putoff} {reverse puton}}
	}

	{sensor
		{visor "main"
			{vision "tank_main-l"}
		}
	}

	{extender "inventory"
		{box
			{item "ammo mortar81 eng fg" 44}
			{item "ammo mortar81 eng wp" 12}
			{item "ammo mgun red" 1100}
			{item "bren" filling "ammo mgun red" 28 {user "mgun"}}
		}
	}
	{Weaponry
		{place "gun"
			{Barrels 1}
			{weapon "weapon 3_inch_mortar" filling "ammo mortar81 eng fg"}
			{gunner "gunner"}
			{charger "charger"}
			{foresight "foresight1"}
			{StationaryFiring}
		}
		{place "mgun"
			{basic}
			{type "mgun_hull"}
			{LinkBone "mgun"}
			{LinkAnimation "off"}
			{gunner "commander"}
			{charger "commander"}
			("abm_mgun")
		}
	}  	

	{mass 24000}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.56) len(0.4))
		{Locomotion ("locomotion")
			{maxspeed   28}
			{maxSpeedAtMaxTurn 5}
			{StartTime  30}
			{TurnTime   12}
			{TurnStart  0.6}			
			{TurnRadius 6} 
    		{TurnStop   0.5}
			{BrakeTime  1}
			{StopTime   1.5}
   			{Gears  0.1 0.2 0.3 1}
			{RearGears  0.30} 
		}
		{speed
        	{Normal  28}
        	{Slow  28}
    	}
		;{DisableMoveWhileFiring}
	}

	{Extension "gun_carrier.mdl"}
}

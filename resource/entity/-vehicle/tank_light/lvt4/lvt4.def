{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "light" "amphibia" "vision_vehicle_high" "muzzle_medium"}

	{collider "tank.light"}
	{PatherID "amphibia"}	
	{extender "enumerator"}
	
	{volume "turret1"
		{component "turret"}
		{tags "turret" "body"}
	}
	{volume "turret2"
		{component "turret"}
		{tags "turret" "body"}
	}
	{volume "turret3"
		{component "turret"}
		{tags "turret" "body"}
	}
	{volume "turret4"
		{component "turret"}
		{tags "turret" "body"}
	}
	{volume "turret5"
		{component "turret"}
		{tags "turret" "body"}
	}
	{volume "turret6"
		{component "turret"}
		{tags "turret" "body"}
	}

	("armor_medium" turret(38 32 25 6) body(38 25 25 6))
	("us_3x_sight")

	{boarder
		{anm "left"
			{forward	{begin	"board_HighArmor"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_HighArmor"} {end "seat_gunner_stand"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_HighArmor"} 	{end "seat_armor"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_HighArmor"} {end "seat_armor"}}
			{reverse 	{end	"emit_body"}}
		}
	}
	("gunner_visible")
	("crew_human" place(driver)	door1(emit1) door2(emit2) visor(driver))
	("crew_human" place(commander) door1(emit1) door2(emit2) visor(main))
	("crew_human_visible" place(gunner)	door1(emit1) door2(emit2) visor(main))
	{placer 
		{place "gunner" {openForCrush 0}}
	}	
	
	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit8)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	("seat_human" place(seat4) bone(seat04) door(emit10)  animation(armor1))
	("seat_human" place(seat5) bone(seat05) door(emit7)  animation(armor1))
	("seat_human" place(seat6) bone(seat06) door(emit4)  animation(armor1))
	("seat_human" place(seat7) bone(seat07) door(emit9)  animation(armor1))
	("seat_human" place(seat8) bone(seat08) door(emit6)  animation(armor1))

	{extender "inventory"
		{box
			{item "ammo bullet75 usm8 fg" 60}
			{item "browning" filling "ammo hmgun ap" 100 {user "mgun"}}
			{item "ammo hmgun ap" 550}
			{item "ammo springfield_belt" 1200}
		}
	}
	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{charger "gunner"}
			{weapon "75mm_m2" filling "ammo bullet75 usm8 fg" 1}
			("abm_low")
		}
		{place "mgun"
			{type "mgun_aa"}
			{gunner "gunner2"}
			{charger "gunner2"}
			{LinkBone "mgun_rot"}
			{LinkAnimation "off"}
			("abm_mgun_heavy")
		}
		{place "mgun1"
			{type "mgun_hull"}
			{weapon "browning_m19" filled}
			{foresight "foresight4"}
			{gunner "driver"}
			{charger "driver"}
			("abm_mgun")
		}
		{place "mgun2"
			{type "mgun_coaxial"}
			{weapon "browning_m19" filled}
			{foresight "foresight5"}
			{charger "gunner"}
			("abm_mgun")
			{basic}
		}
	}

	{mass 18200}
	{Chassis
		("tank_trace_ex" fx("tracks_sm2") step(0.15) len(0.4) boneleft("wheels_l") boneright("wheels_r"))
		{Locomotion ("locomotion")
			{maxspeed   22}
			{maxSpeedAtMaxTurn 5}
			{StartTime	30}
			{TurnTime	18}
			{TurnStart  1.8} 
    		{BrakeTime  1.5}
     		{StopTime   2.5} 
    		{TurnRadius 11} 
    		{TurnStop   0.8} 
    		{Gears      0.1 0.2 0.3 1.0}
    		{RearGears  0.3}
		}
		{switch
			{exitFromWater}
			{terrain not "water" "deep_water"}
		}
		{FuelBag
			{volume 295 }	
			{rate	 20 }   
			{remain 295 }
			{fuel "fuel"}
		}
		{speed
        	{Normal  22}
        	{Slow  22}
    	}
	}

	{Extension "LVT4.mdl"}
	{bone "turret"
		{speed 0.003}
	}
	{bone "gun_rot"
		{speed 0.001}
	}

	{chassis "water"
		("chassis_defaults")
		{ignorePatherBounds}
		{waterline 1.4}
		{switch
			{terrain "water" "deep_water"}
		}	
	}
}

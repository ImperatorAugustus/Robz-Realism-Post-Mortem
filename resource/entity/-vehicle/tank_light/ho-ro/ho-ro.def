{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "medium" "-turret" "opened" "vision_vehicle_medium" "muzzle_maximum" "gun_mode_change"}

	{extender "enumerator"}	

	("armor_spa_light" armor(25 25 7 8))
	("armor_engine"  t(25 25 17 18))
	("shield" args 10)

	{extender "shield"
			{on}
	}
	{component "shield"}

	{boarder
		{anm "left"
			{forward	{begin	"board_tank_left"} {end "pose_vickers_gunlaeyr-L"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "right"
			{forward	{begin	"board_tank_right"} {end "pose_vickers_gunlaeyr-R"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "armor"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_1"}}
			{reverse 	{end	"emit_tank_2"}}
		}
		{anm "armor1"
			{forward	{begin	"board_MiddleArmor"} {end "pose_seat_armor_2"}}
			{reverse 	{end	"emit_body"}}
		}
	}

	("crew_human"		place(driver) door1(emit1) door2(emit2) visor(driver))
	("crew_human_visible_anm"	place(commander) door1(emit1) door2(emit2) visor(main) anm_left(left) anm_right(right))
	("crew_human_visible_anm"	place(gunner) door1(emit1) door2(emit2) visor(main) anm_left(left) anm_right(right))
	{placer 
		{place "commander" {openForCrush 0}}
		{place "gunner" {openForCrush 0}}
	}

	("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor1))
	("seat_human" place(seat2) bone(seat02) door(emit3)  animation(armor))
	("seat_human" place(seat3) bone(seat03) door(emit4)  animation(armor1))
	("seat_human" place(seat4) bone(seat04) door(emit4)  animation(armor))
	("seat_human" place(seat5) bone(seat05) door(emit5)  animation(armor1))
	("seat_human" place(seat6) bone(seat06) door(emit6)  animation(armor))

	{sensor
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor1"}
		}
		{visor "main"
			{vision "tank_main-h"}
			{bone "gun"}
		}
	}

	{extender "inventory"
		{box
			{item "ammo bullet150 jap fg" 30}
			;{item "ammo bullet150 sm" 12}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "150mm_type38" filling "ammo bullet150 jap fg"}
			{charger "commander"}
			{StationaryFiring}
			("abm_direct_how")
		}
		{place "gun1_2"
			{type "gun_change_arty"}
			{weapon "150mm_type38_2"}
			{basic}
			{rotate}
			{charger "gunner"}
			{StationaryFiring}
			("abm_howitzer")
		}
	
	}

	{mass 16300}
	{Chassis
		("tank_trace" fx("tracks_mid") step(0.56) len(0.14))
		{Locomotion ("locomotion")
			{MaxSpeed	30}
			{maxSpeedAtMaxTurn 6}
			{StartTime  26}
			{TurnStart  1.7}			
			{TurnTime   15}
			{TurnRadius 10} 
    		{TurnStop   0.9}
			{BrakeTime  1}
			{StopTime   2}
			{Gears      0.1 0.2 0.3 1}
			{RearGears  0.2}		
		}
		{speed
        	{Normal  30}
        	{Slow  30}
    	}
		{FuelBag
			{volume 380 }	
			{rate	15 }   
			{remain 380 }
			{fuel "fuel"}
		}
	}

	{Extension "ho-ro.mdl"}

	{Volume "body01"
		{able {holed}}
		{tags "body"}
		{component "body"}
	}
	{Volume "body02"
		{able {holed}}
		{tags "body"}
		{component "body"}
	}
	{Volume "crew"
		{able clear {hole}}
		{component "body"}
	}
	{Volume "engine01"
		{tags "engine"}
		{component "engine"}
	}
	{Volume "engine02"
		{tags "engine"}
		{component "engine"}
	}
	{Volume "gun1"
		{tags "gun"}
		{component "gun"}
	}
	{Volume "gun2"
		{tags "gun"}
		{component "gun"}
	}
	{Volume "hole01"
		{able clear {hole}}
		{component "shield"}
	}
	{Volume "inventory"
		{thickness 10}
		{component "engine"}
	}
	{Volume "shield"
		{thickness 20}
		{able {holed}}
		{tags "turret"}
		{component "turret"}
	}

	{bone "turret"
	    {limits -5 50}
	    {speed 0.001}
	}
	{bone "gun_rot"
	    {limits -15 15}
	    {speed 0.001}
	}
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)
}

{game_entity
	(include "/properties/car.ext")
	(include "/properties/selection/vehicle.inc"  scale(1.1))
	{collider "truck"}
	{props "vehicle" "car" "wheeled" "truck" "truck_mortar" "vision_vehicle_medium"}
	("armor_medium" args 1.0)
	{extension "crew.ext"}
		
	
		{extender "inventory"
			{box
				{item "ammo mortar90 fg" 60}
			}
		}
		{Weaponry
			{place "gun"
				{Barrels 1}
				{weapon "weapon 90mm_type97" filling "ammo mortar90 fg"}
				{charger "gunner"}
				{gunner "gunner"}
			}
		}
		
	{extender "enumerator"}


	("wheel" args "wheelright1")
	("wheel" args "wheelleft1")
	("wheel" args "wheelright2")
	("wheel" args "wheelleft2")
	("wheel" args "wheelright3")
	("wheel" args "wheelleft3")

	{sensor
		{visor "driver"
			{vision "tank_driver"}
			{bone "visor1"}
		}
	}  

	{mass 4600}
	{Chassis
		{Locomotion ("locomotion")
			{TurnRadius 6}
			{maxspeed   30}
			{maxSpeedAtMaxTurn 17}
			{RearGears	0.4}
		}
		{FuelBag
			{volume 120 }	
			{rate	10 }   
			{remain 120 }
			{fuel "fuel"}
		}
		{speed
			{Normal  12}
			{Slow  20}
		}
		("car_trace" fx("tracewheel01") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("car_trace" fx("tracewheel01") step(6.09) wheell("wlr") wheelr("wrr") bonel("FXtraceL2") boner("FXtraceR2"))
	{DisableMoveWhileFiring}
	}
	{placer
		{place "driver"		{group "gunner"} {visor "driver"}}
		{place "commander"	{group "gunner"} {visor "driver"}}
		{place "gunner"		{group "gunner"} {visor "main"} {turnoff {targetable 0}}}
	}

	{Extension "isuzutx40_mort.mdl"}
	
	{bone "foresight"
		{limits -30 5}
	}
	{bone "turret"
		{speed 0.005}
	}
}

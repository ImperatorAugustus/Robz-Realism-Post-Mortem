{game_entity
	(include "/properties/armoredcar.ext")
	(include "/properties/selection/vehicle.inc" scale(1.0))
	{props "vehicle" "armored_car" "tank" "zenite" "turret" "wheeled_8" "explosion_throw_crew" "vision_vehicle_medium" "switch_mgun"}

	{extender "enumerator"
		{digit_folder "ger"}
	}
	
	{Extension "crew.ext"}

	{volume "sticky"
		{tags "grenade_fg_target"}
		{able clear {contact} {touch}}
		{component "sticky_body"}
	}
	{component "sticky_body"}

	{volume "body1"
		{tags "body"}
		{component "body"}
		{thickness 8}
	}
	{volume "body2"
		{tags "body"}
		{component "body"}
		{thickness 8}
	}
	{volume "engine"
		{tags "engine"}
		{component "engine"}
		{thickness 10}
	}
	{volume "mantlet"
		{component "turret"}
		{tags "turret"}
		{thickness 10}
	}
	{volume "inventory"
        {thickness 2}
	}
	{Volume "gun"
		{thickness 10}
		{tags "no_target"}
		{able {Visible 0} {Obstacle 0} {Contact 0}}
	}
	{component "gun"
		{RepairTime 20}
	}

	{extender "shield"
			{on}
	}
	("shield" args 10)
	{component "shieldl1" {tags "shield"}}
	{component "shieldr1" {tags "shield"}}
	
	("armor_medium" args 1.0)

	{extender "inventory"
		{box
			{item "bullet37 ger zenite aphe" 500}
			{item "bullet37 ger zenite fg" 500}
		}
	}

	{Weaponry
		("restore_ik_time")
		{place "gun"
			{RestoreIKAfterAim}
			{weapon			"37mm_flak_36" filled}
			{charger		"gunner"}
			("abm_zenite")
		}
	}

	("wheel" args "wheelleft1")
	("wheel" args "wheelright1")
	("tracks")

	{mass 11250}			;9700 sdkfz7 + 1550 flak36
	{Chassis
		{Locomotion ("locomotion")
			{MaxSpeed			31}
			{maxSpeedAtMaxTurn		7}
			{StartTime			17}
			{BrakeTime			1.5}
			{StopTime			2.5}
			{TurnRadius			8}
     			{Gears  0.2 0.3 0.4 1}
			{RearGears  0.25}
		}
		{FuelBag
			{volume 215}
			{rate	14}
			{remain 215}
			{fuel "fuel"}
		}
		{speed
			{Normal  31}
			{Slow  31}
		}
		; left track must be first
		("tank_trace" fx("tracks_mid") step(0.5) len(0.86) boneleft("FXtraceL2") boneright("FXtraceR2"))
		("car_trace" fx("tracewheel02") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
	}

	{Extension "sdkfz7_2.mdl"}
	
	{bone "gun_rot1"		;horizontal gun
		{speed 0.0045}
		{limits -145 145}
	}
	{bone "gun_rot"			;vertical gun
		{speed 0.003}
		{limits -10 45}		;gun min down to max up
	}
	
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)
}

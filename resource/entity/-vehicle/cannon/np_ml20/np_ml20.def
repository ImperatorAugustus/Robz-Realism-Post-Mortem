{entity
	(include "/properties/cannon.ext")
	{props "vehicle" "cannon" "wheeled" "vision_vehicle_high" "muzzle_maximum_nodust" "gun_mode_change_art"}
	{PatherId "cannon.large"}

	("armor_heavy")

	("crew_wheeled_gun")
	{boarder
		{anm "gunner"
			{forward	{end "pose_m5_gunlayer" 10}}
		}
		{anm "commander"
			{forward	{end "pose_m5_charger" 10}}
		}
		{anm "driver1"
			{forward {end "cannon_pak40_pusher_left" 10}}
		}
		{anm "driver2"
			{forward {end "cannon_pak40_pusher_right" 10}}
		}
		{anm "seat1"
			{forward {end "pose_seat_cannon_left" 10}}
		}
		{anm "seat2"
			{forward {end "pose_seat_cannon_right" 10}}
		}
	}

	("wheel" args "wheelright")
	("wheel" args "wheelleft")

	{extender "inventory"
		{box
                {item "ammo bullet152 rusl fg" 6}
                ;{item "ammo bullet152 sm" 6}
		}
	}
	{Weaponry
		{place "gun"
			{RestoreIKAfterAim}
			{weapon "152mm_ml20" filling "ammo bullet152 rusl fg" 3}
			("abm_howitzer")
		}
		{place "gun1_2"
			{type "gun_change_direct"}
			{weapon "152mm_ml20_2"}
			{basic}
			{rotate}
			{charger "gunner"}
			("abm_field_gun")
		}
	}

	{mass 3000}

	{Extension "np_ml20.mdl"}
	(include "/properties/selection/cannon.inc"  scale(0.7))

	{extender "cannon"
		{animation
			{switch "close"}
			{move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right"}
			{aim "cannon_zis3_gunlayer" ""}
			{fire  "Cannon_gunlayer_fire-alert" "cannon_zis3_charger_fire 0.1"}
			{reload  "" "Cannon_zis3_charger"}
		}
		{move {obstacle "close"}}
		{attack {obstacle "open"}}
		(mod "mp" {rotate_ik_Limit 0})
	}
	{Chassis "track"
		("car_trace" fx("tracewheel03") step(0.09) wheell("wlf") wheelr("wrf") bonel("FXtraceL1") boner("FXtraceR1"))
		("loco_big")
    }
	{sensor
		{visor "main"
			{vision "cannon_main"}
		}
	}
	{bone "turret"
		{speed 0.0005}
	}
	{bone "gun_rot"
		{speed 0.0005}
	}
	(mod "mp"
		{brain
			{properties
				{fire_mode hold}
			}
		}
	)

}